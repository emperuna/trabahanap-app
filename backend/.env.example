# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/trabahanap
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password
DATABASE_DRIVER=org.postgresql.Driver

# JPA Configuration
JPA_DIALECT=org.hibernate.dialect.PostgreSQLDialect
DDL_AUTO=update
SHOW_SQL=false

# JWT Configuration - GENERATE A NEW SECRET KEY!
# Use a strong, random 512-bit key for production
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_256_bits
JWT_EXPIRATION_MS=86400000

# H2 Console (disable in production)
H2_CONSOLE_ENABLED=false

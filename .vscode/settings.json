{
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.updateBuildConfiguration": "disabled",
    "mcp.servers": {
        "trabahanap-chakra": {
            "command": "npm",
            "args": [
                "run",
                "mcp:chakra"
            ],
            "cwd": "${workspaceFolder}"
        },
        "trabahanap-react": {
            "command": "npm",
            "args": [
                "run",
                "mcp:react"
            ],
            "cwd": "${workspaceFolder}"
        },
        "trabahanap-api": {
            "command": "npm",
            "args": [
                "run",
                "mcp:api"
            ],
            "cwd": "${workspaceFolder}"
        }
    },
    "files.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "mcp/logs": true
    }
}
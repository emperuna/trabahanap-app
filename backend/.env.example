# Database Configuration - Neon PostgreSQL
DATABASE_URL=jdbc:postgresql://ep-xxxxx-xxxxx.region.aws.neon.tech/neondb?sslmode=require
DATABASE_USERNAME=neondb_owner
DATABASE_PASSWORD=your_neon_password_here
DATABASE_DRIVER=org.postgresql.Driver

# JPA Configuration
JPA_DIALECT=org.hibernate.dialect.PostgreSQLDialect
DDL_AUTO=update
SHOW_SQL=false

# JWT Configuration - GENERATE A NEW SECRET KEY!
# Use a strong, random 512-bit key for production
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_256_bits
JWT_EXPIRATION_MS=86400000

# H2 Console (disable in production)
H2_CONSOLE_ENABLED=false

# File Storage Configuration
# Options: 'local' (default) or 'r2' (Cloudflare R2)
STORAGE_TYPE=local

# Cloudflare R2 Configuration (required when STORAGE_TYPE=r2)
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
R2_ACCESS_KEY=your_r2_access_key_id
R2_SECRET_KEY=your_r2_secret_access_key
R2_BUCKET=trabahanap-uploads
# Optional: Public URL for direct file access (if using R2 public bucket or custom domain)
R2_PUBLIC_URL=https://your-r2-public-domain.com
